CREATE or REPLACE FUNCTION exttab_error_context_callback_func()
RETURNS SETOF INTEGER
AS
$$
DECLARE
    ret INTEGER;
BEGIN
    FOR ret IN
        SELECT c2 from exttab_error_context_callback
    LOOP
        RETURN NEXT ret;
    END LOOP;
END
$$
LANGUAGE plpgSQL READS SQL DATA;


                               parent_t_8k text encoding (blocksize=16384),
                               otherparent_t_8k text encoding (blocksize=8192))
WITH (appendonly=true, orientation=column);
CREATE TABLE aocs_inh_multichild ()
INHERITS (aocs_inh_parent, aocs_inh_parent2)
WITH (appendonly=true, orientation=column);


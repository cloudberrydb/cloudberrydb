 771 | hello, Ng.Jim
 790 | hello, Smith.Jen
 770 | hello, Woo.John
 778 | morning, Lau.Jerry
 771 | morning, Ng.Jim
 790 | morning, Smith.Jen
 770 | morning, Woo.John
(8 rows)

drop table people;
drop function tfunc(variadic char[]);

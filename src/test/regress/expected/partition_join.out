         ->  Hash Right Join
               Hash Cond: (t2.b = t1.a)
               ->  Redistribute Motion 3:3  (slice2; segments: 3)
                     Hash Key: t2.b
                     ->  Append
                           ->  Seq Scan on prt2_p1 t2
                           ->  Seq Scan on prt2_p2 t2_1

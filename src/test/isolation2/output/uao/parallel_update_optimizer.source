-- until the transaction is committed.
--
DROP TABLE IF EXISTS ao;
DROP
CREATE TABLE ao (a INT, b INT) WITH (appendonly=true, orientation=@orientation@);
CREATE
INSERT INTO ao SELECT i as a, i as b FROM generate_series(1,10) AS i;

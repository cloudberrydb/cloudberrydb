INSERT 10
1:begin;
BEGIN
1:alter table t2 rename to newt2;
ALTER
2&:drop table t2;  <waiting ...>
1:commit;
COMMIT
2<:  <... completed>
ERROR:  table "t2" does not exist
2:select count(*) from newt2;
count
-----
10   
(1 row)

